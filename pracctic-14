#include <iostream>
using namespace std;

int main()
{

    setlocale(0, "");
    int choise;
    int size;
    int vis;
    int sir;
    int figr;
    char bebr2;
    char textr;
    cout << "[ + ] Программа - “Геометрические фигуры”" << endl;
    cout << "[ 1 ] Линия" << endl;
    cout << "[ 2 ] Квадрат" << endl;
    cout << "[ 3 ] Прямоугольник" << endl;
    cout << "[ + ] Выберите фигуру: " << endl;
    cin >> figr;
    if (figr == 2) {
        cout << "[ + ] Фигура: квадрат" << endl;
        cout << "[ 1 ] Заполненный" << endl;
        cout << "[ 2 ] Пустой" << endl;
        cin >> choise;
        cout << "[ + ] Размер: " << endl;
        cin >> size;
        cout << "[ + ] Текстура: " << endl;
        cin >> textr;
    }
    else if (figr == 1) {
        cout << "[ + ] Фигура: линия" << endl;
        cout << "[ + ] Размер: " << endl;
        cin >> size;
        cout << "[ + ] Текстура: " << endl;
        cin >> textr;
    }
    else if (figr == 3) {
        cout << "[ + ] Фигура: прямоугольник" << endl;
        cout << "[ 1 ] Заполненный" << endl;
        cout << "[ 2 ] Пустой" << endl;
        cin >> choise;
        cout << "[ + ] ширина: " << endl;
        cin >> sir;
        cout << "[ + ] высота" << endl;
        cin >> vis;
        cout << "[ + ] текстура" << endl;
        cin >> textr;

    }

    if (figr == '2' and choise == 1)
        for (int i = 0; i < size; i++) {
            for (int a = 0; a < size; a++) {
                cout << textr << " ";
            }
            cout << endl;
        }
    else if (figr == '2' and choise == '2') {
        for (int i = 0; i < size; i++) {
            for (int a = 0; a < size; a++) {
                if (i == 0 or i == size - 1 or a == 0 or a == size - 1)
                    cout << textr << " ";
                else {
                    cout << "  ";
                }
            }
            cout << endl;
        }
    }
    else if (figr == 1) {
        for (int i = 0; i < size; i++) {
            cout << textr;
        }
    }
    else if (figr == 3 and choise == 1)
        for (int i = 0; i < vis; i++) {
            for (int a = 0; a < sir; a++) {
                cout << textr << " ";
            }
            cout << endl;
        }
    else if (figr == 3 and choise == 2) {
        for (int i = 0; i < vis; i++) {
            for (int a = 0; a < sir; a++) {
                if (i == 0 or i == vis - 1 or a == 0 or a == sir - 1)
                    cout << textr << " ";
                else {
                    cout << "  ";
                }
            }
            cout << endl;
        }
    }
    return 0;
}
